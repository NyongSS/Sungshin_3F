<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Ctype">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C타입"
        android:fontFamily="@font/webtoon_font"
        android:textColor="#E4D33D"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_margin="40dp"
        android:fontFamily="@font/nanumfont"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="하이엔드 스트릿 매니아일 것 \n같은 당신! 아무나 소유하기 힘든 \n이런 브랜드들의 주인이 된다면 \n정말 좋을 것 같지 않나요?"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/ctype_supreme" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/ctype_yeeze" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/ctype_bape" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/ctype_offwhite" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>