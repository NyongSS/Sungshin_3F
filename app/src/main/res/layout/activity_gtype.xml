<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Gtype">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G타입"
        android:fontFamily="@font/webtoon_font"
        android:textColor="#E319D8"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="300dp"
        android:layout_height="130dp"
        android:layout_margin="40dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanumfont"
        android:gravity="center_horizontal"
        android:text="simple is the best 라는 \n모토를 가진 당신, 심플하면서도 \n퀄리티가 높은 것으로 알려진 \n5개의 브랜드들의 심플한 의상을 \n추천드려요!" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/gtype_rr" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/gtype_tb" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/gtype_tommy" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:srcCompat="@drawable/gtype_v" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>